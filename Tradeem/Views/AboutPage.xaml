<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Tradeem.Views.AboutPage" 
             xmlns:vm="clr-namespace:Tradeem.ViewModels">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Trade'Em"/>
            <Button Margin="0,10,0,0" Text="Login" Command="{Binding OpenWebCommand}" TextColor="Black" />
            <Button Margin="0,10,0,0" Text="Sign Up" Command="{Binding SignUpCommand}" TextColor="Black" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>